<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/styles/styles.css" />
    <title>Home Page</title>
</head>

<body>
    {{#if errors}}
    <div>
        <div class="errorContainer">
            {{#each errors}}
            <p>{{this}}</p>
            {{/each}}
        </div>
    </div>
    {{/if}}

    <div id="wrapper">
        <header>
            <!-- Navigation -->
            <nav>
                <div>
                    <a href="#">Home</a>
                    <a href="#">Dashboard</a>
                    <a href="#">Search</a>
                </div>
                {{#if hasUser}}
                <!-- Logged-in users -->
                <div class="user">
                    < a href="#">Add Stones</a>
                    <a href="#">Logout</a>
                </div>
                {{else}}
                <div class="guest">
                    <a href="#">Login</a>
                    <a href="#">Register</a>
                </div>
                {{/if}}

                <!-- Guest users -->
            </nav>
        </header>

        <main class="home">
            <!-- Home page -->

            {{{body}}}
        </main>

        <footer>
            <p>@EarthTreasureVaul</p>
        </footer>
    </div>
</body>

</html>